# ###> doctrine/doctrine-bundle ###
# # Format described at https://www.doctrine-project.org/projects/doctrine-dbal/en/latest/reference/configuration.html#connecting-using-a-url
# # IMPORTANT: You MUST configure your server version, either here or in config/packages/doctrine.yaml
# #

APP_NAME="Nom de l'application"

###> symfony/framework-bundle ###
APP_SECRET="%env(resolve:APP_SECRET)%"
###< symfony/framework-bundle ###

###> nelmio/cors-bundle ###
CORS_ALLOW_ORIGIN="^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$"
###< nelmio/cors-bundle ###

###> lexik/jwt-authentication-bundle ###
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
###< lexik/jwt-authentication-bundle ###

###> symfony/doctrine ###
DATABASE_URL="mysql://%env(resolve:DATABASE_USER)%:%env(resolve:DATABASE_PASS)%@%env(resolve:DATABASE_NAME)%/db?serverVersion=9.4.0&charset=utf8mb4"
###> symfony/doctrine ###

###> symfony/mailer ###
MAILER_DSN="smtp://%env(resolve:MAILER_USER)%:%env(resolve:MAILER_PASS)%@%env(resolve:MAILER_HOST)%:%env(resolve:MAILER_PORT)%"
MAILER_NAME="Account Mail Bot"
###< symfony/mailer ###

###> client/angular ###
CLIENT_URL="http://localhost:4200/"
###> client/angular ###